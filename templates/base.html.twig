<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <meta name="view-transition" content="same-origin" />
    <title>{% block title %}TomTroc{% endblock %}</title>

    <link rel="alternate" type="application/rss+xml" title="{{ 'rss.title'|trans }}" href="{{ path('blog_rss') }}">

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
        <link rel="stylesheet" href="{{ asset('styles/admin.css') }}">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}

    <link rel="shortcut icon" type="image/svg+xml" href="{{ asset('favicon.svg') }}">
</head>

<body id="{{ app.request.get('_route') }}">
    {% import 'default/_language_selector.html.twig' as lang %}

    {% block header %}
        <header class="site-header">
            <div class="container header-container">
                <a href="{{ path('homepage') }}" class="logo">TomTroc</a>
                <nav class="main-nav">
                    <ul>
                        <li><a href="{{ path('blog_index') }}" class="{{ app.request.get('_route') == 'blog_index' ? 'active' : '' }}">{{ 'menu.homepage'|trans }}</a></li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
                        {% endif %}
                        <li><a href="{{ path('contact') }}" class="{{ app.request.get('_route') == 'contact' ? 'active' : '' }}">Contactez-nous</a></li>
                        <li><a href="{{ path('blog_search') }}" class="{{ app.request.get('_route') == 'blog_search' ? 'active' : '' }}">{{ 'menu.search'|trans }}</a></li>
                        {% if app.user %}
                            <li class="user-menu">
                                <span><i class="fas fa-user"></i> {{ app.user.fullname }}</span>
                                <ul class="dropdown">
                                    <li><a href="{{ path('user_edit') }}">{{ 'menu.user'|trans }}</a></li>
                                    <li><a href="{{ logout_path() }}" class="text-danger">{{ 'menu.logout'|trans }}</a></li>
                                </ul>
                            </li>
                        {% endif %}
                        <li>{{ lang.render_language_selector(true) }}</li>
                    </ul>
                </nav>
            </div>
        </header>
    {% endblock %}

    <main class="container main-content">
        {% block body %}
            <div class="layout">
                <section id="main">
                    {{ include('default/_flash_messages.html.twig') }}
                    {% block main %}{% endblock %}
                </section>

                <aside id="sidebar">
                    {% block sidebar %}
                        <div class="sidebar-card">
                            {{ render_esi(controller('Symfony\\Bundle\\FrameworkBundle\\Controller\\TemplateController::templateAction', {
                                'template': 'blog/about.html.twig',
                                'sharedAge': 600,
                                '_locale': app.request.locale
                            })) }}
                        </div>
                    {% endblock %}
                </aside>
            </div>
        {% endblock %}
    </main>

    {% block footer %}
        <footer class="site-footer">
            <div class="footer-container">
                <p>&copy; {{ 'now'|date('Y') }} - Tom Troc</p>
                <p class="small">{{ 'mit_license'|trans }}</p>
                <a href="https://github.com/Alydiabira/Symfony-7-testapp" target="_blank" title="Voir le projet sur GitHub">
                    <i class="fab fa-github"></i>
                </a>
            </div>
        </footer>
    {% endblock %}
</body>
</html>
