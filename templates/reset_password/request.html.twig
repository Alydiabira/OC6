{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}

<style>
    @import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&display=swap');
    
    body { 
        font-family: 'Open Sans', sans-serif;
        background: linear-gradient(135deg, #670d10 0%, #092756 100%);
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0;
    }
    
    .login-container {
        background-color: rgba(0, 0, 0, 0.6);
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
        width: 100%;
        max-width: 400px;
    }

    .login-container h1 {
        color: #fff;
        text-align: center;
        margin-bottom: 20px;
        font-size: 2rem;
        letter-spacing: 1px;
    }

    .alert {
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    input {
        width: 100%;
        padding: 10px;
        border-radius: 4px;
        background-color: rgba(255, 255, 255, 0.1);
        color: #fff;
        border: 1px solid rgba(255, 255, 255, 0.3);
        box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.2);
        transition: all 0.3s;
    }

    input:focus {
        outline: none;
        box-shadow: inset 0 2px 10px rgba(0, 0, 0, 0.4);
        border-color: #4a77d4;
    }

    button {
        width: 100%;
        padding: 12px;
        background-color: #4a77d4;
        border: none;
        border-radius: 4px;
        color: white;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    button:hover {
        background-color: #3a5bb8;
    }

    small {
        color: #ddd;
    }
</style>

<div class="login-container">
    <h1>Reset your password</h1>

    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    
    {{ form_start(requestForm) }}
        <div class="form-group">
            {{ form_label(requestForm.email) }}
            {{ form_widget(requestForm.email, {'attr': {'class': 'form-control'}}) }}
        </div>
        <small>Enter your email address, and we will send you a link to reset your password.</small>

        <button class="btn btn-primary mt-3">Send password reset email</button>
    {{ form_end(requestForm) }}

</div>

{% endblock %}
